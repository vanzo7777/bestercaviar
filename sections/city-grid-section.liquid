<section class="city">
  <div class="container">
      <div class="city__slider swiper">
          <div class="city__wrapper">
              {% for block in section.blocks %}
                <div class="city__item">
                    {% if block.settings.title != blank %}
                      <div class="city__title">
                          {{ block.settings.title }}
                      </div>
                    {% endif %}
                    {% if block.settings.image != blank %}
                      <picture><img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}"></picture>
                    {% endif %}
                </div>
              {% endfor %}
          </div>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "City Grid Section",
    "blocks": [
      {
        "type": "city",
        "name": "City",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "name city"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "City Grid Section"
      }
    ]
  }
{% endschema %}