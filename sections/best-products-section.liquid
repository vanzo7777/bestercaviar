<section class="best {% if section.settings.delivery %}delivery__best{% endif %}">
  <div class="container">
      {% if section.settings.title != blank %}
        <p class="best__title title">
            {{ section.settings.title }}
        </p>
      {% endif %}
      {% if section.settings.sub_title != blank %}
        <p class="best__subtitle subtitle">
            {{ section.settings.sub_title }}
        </p>
      {% endif %}
  </div>
  <div class="best__slider swiper">
      <div class="best__wrapper swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.product != blank %}
              <div class="best__slide swiper-slide">
                  {% render 'card-product',
                    card_product: block.settings.product,
                    show_secondary_image: false,
                    image_shape: 'default',
                    media_aspect_ratio: 'square',
                    show_vendor: true,
                    show_rating: false,
                    lazy_load: true,
                    show_quick_add: false,
                    section_id: section.id
                  %}
              </div>
          {% endif %}
          {% endfor %}
      </div>
      <div class="best__pagination pagination"></div>
  </div>
</section>

{% schema %}
  {
    "name": "Best Products Section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "best Caviar Gift Sets"
      },
      {
        "type": "text",
        "id": "sub_title",
        "label": "Subtitle",
        "default": "Each Caviar gift set comes with a mini cooler, set of blinis, mother of pearl spoons."
      },
      {
        "type": "checkbox",
        "id": "delivery",
        "label": "Delivery"
      }
    ],
    "blocks": [
      {
        "type": "product",
        "name": "Product",
        "settings": [
          {
            "type": "product",
            "id": "product",
            "label": "Product"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Best Products Section"
      }
    ]
  }
{% endschema %}