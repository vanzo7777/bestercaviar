<section class="card-list">
  <div class="container">
    
      {% if section.settings.title != blank %}
        <h2 class="title">
            {{ section.settings.title }}
        </h2>
      {% endif %}
      <div class="card__list">
          <div class="card__wrapper">
              {% for product in section.settings.collection.products %}
                {% render 'card-product', card_product: product , inversion: false %}
              {% endfor %}
          </div>
          <div class="card__pagination pagination"></div>
      </div>
  </div>
</section>

{% schema %}
  {
    "name": "Collection Products",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Caviar Essentials"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ],
    "presets": [
      {
        "name": "Collection Products"
      }
    ]
  }
{% endschema %}